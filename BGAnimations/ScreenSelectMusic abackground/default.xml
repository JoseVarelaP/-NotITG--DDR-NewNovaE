<ActorFrame><children>
	<Layer File="../_bg.png" Condition="GAMESTATE:IsExtraStage() == false and GAMESTATE:IsExtraStage2() == false" OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;zoomto,SCREEN_WIDTH+5,SCREEN_HEIGHT;" />

	<Layer File="../_bg_red.png" Condition="GAMESTATE:IsExtraStage()" OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;zoomto,SCREEN_WIDTH+5,SCREEN_HEIGHT;" />
	<Layer File="../_bg_black.png" Condition="GAMESTATE:IsExtraStage2()" OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;zoomto,SCREEN_WIDTH+5,SCREEN_HEIGHT;" />

	<Layer Type="ActorFrame" OnCommand="fov,170"><children>
		<Layer File="../sphere_back.txt" OnCommand="x,SCREEN_CENTER_X+(300-320);y,SCREEN_CENTER_Y+(540-240);rotationx,-20;rotationz,90;zoom,12;spin;effectmagnitude,3,2,0" />
		<Layer File="../ring1_back.txt" OnCommand="x,SCREEN_CENTER_X+(300-320);y,SCREEN_CENTER_Y+(540-240);rotationx,-20;rotationz,90;zoom,12;spin;effectmagnitude,30,22,45" />
		<Layer File="../ring1_back.txt" OnCommand="x,SCREEN_CENTER_X+(300-320);y,SCREEN_CENTER_Y+(540-240);rotationx,-20;zoom,12;spin;effectmagnitude,-30,22,-45" />
	</children></Layer>

	<Layer Type="Quad" OnCommand="%function(self)
	self:x(10)
	self:y(SCREEN_CENTER_Y+90)
	self:vertalign('top')
	self:horizalign('left')
	self:zoomto(280,100)
	self:diffuse(0,0,0,0.6)
	 end" />

</children></ActorFrame>